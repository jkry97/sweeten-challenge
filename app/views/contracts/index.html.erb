<p id="notice"><%= notice %></p>

<h1>Contracts</h1>

<table>
  <thead>
    <tr>
      <th>Rating</th>
      <th>Home owner</th>
      <th>Contractor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.rating %></td>
        <td><%= contract.home_owner.id %></td>
        <td><%= contract.contractor.id %></td>
        <td><%= link_to 'Show', contract %></td>
        <td><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

